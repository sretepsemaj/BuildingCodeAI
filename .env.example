# Django Settings
DJANGO_ENV=development
DEBUG=True
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1,buildingcodeai.com,www.buildingcodeai.com
CORS_ALLOWED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# AWS Settings
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=buildingcodeai-media
AWS_EC2_KEY_PATH=/path/to/your/key.pem

# Redis Settings
REDIS_URL=redis://localhost:6379/1

# Email Settings
EMAIL_HOST=smtp.mail.yahoo.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@yahoo.com
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL=your-email@yahoo.com

# Security Settings (Optional - defaults are secure)
SECURE_SSL_REDIRECT=False  # Set to True in production
SESSION_COOKIE_SECURE=False  # Set to True in production
CSRF_COOKIE_SECURE=False  # Set to True in production

# API Keys (Replace with your keys)
OPEN_API_KEY=your-openai-api-key-here
PLEX_API_KEY=your-perplexity-api-key-here
GROQ_API_KEY=your-groq-api-key-here
HUGG_API_KEY=your-huggingface-api-key-here
NEWS_API_KEY=your-news-api-key-here
PINE_API_KEY=your-pine-api-key-here
PINE_ENVIRONMENT=us-east-1
TUBE_API_KEY=your-youtube-api-key-here
LAMA_API_KEY=your-llama-api-key-here

# API Endpoints
HUGG_API_URL="https://api-inference.huggingface.co/models/microsoft/speecht5_tts"
